# CloudBridge Client Configuration Example
# Copy this file to config.yaml and update with your values

server:
  host: "relay.example.com"  # Replace with your relay server
  port: 51820                # WireGuard port
  jwt_token: "your-jwt-token-here"  # Replace with your JWT token

tls:
  enabled: true
  min_version: "1.3"
  verify_cert: true
  ca_cert: ""

auth:
  type: "jwt"
  secret: "your-secret-here"
  keycloak:
    enabled: false
    server_url: "https://auth.example.com"
    realm: "cloudbridge"
    client_id: "cloudbridge-client"
    client_secret: ""

tunnel:
  local_port: 3389
  remote_host: "192.168.1.100"
  remote_port: 3389

logging:
  level: "info"
  format: "json"
  output: "stdout"

protocol:
  version: "2.0"
  features: ["p2p_mesh", "quantum_crypto", "ai_monitoring"]

tenant:
  id: "your-tenant-id"
  name: "Your Organization"

metrics:
  enabled: true
  port: 8081
  path: "/metrics"

health:
  enabled: true
  port: 8080
  path: "/health"

# P2P Mesh Configuration
wireguard:
  enabled: true
  interface: "wg0"
  listen_port: 51820
  private_key: "your-private-key"
  public_key: "your-public-key"
  mtu: 1420
  peers:
    - public_key: "peer-public-key"
      allowed_ips: ["10.0.0.2/32"]
      endpoint: "peer.example.com:51820"

# Enhanced QUIC Configuration
quic:
  enabled: true
  max_idle_timeout: "30s"
  max_streams: 100
  keep_alive: true
  keep_alive_period: "10s"

# Post-Quantum Cryptography
quantum:
  enabled: true
  kyber:
    key_size: 1024
    encapsulation_mechanism: "kyber1024"
  dilithium:
    key_size: 2048
    signature_algorithm: "dilithium5"

# AI/ML Monitoring
ai:
  enabled: true
  behavior_analysis:
    enabled: true
    sampling_rate: 0.1
    anomaly_threshold: 0.8
  predictive_security:
    enabled: true
    model_path: "/models/security_model.pkl"

# Cadence Workflow Orchestration
cadence:
  enabled: false
  domain: "cloudbridge"
  host: "cadence.example.com"
  port: 7933
  task_list: "cloudbridge-tasks"
